@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-md-2">
        <div class="sidebar">
            <a class="active" href="#home">Admin</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Category İşlemleri için tıklayınız</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Post" asp-action="Index">Post İşlemleri için tıklayınız</a>
        </div>
    </div>

    <div class="col-md-9" style="margin:30px">
        <div class="container p-3">
            <div class="row pt-4">
                <div class="col-6">
                    <h2 class="text-primary">Category List</h2>
                </div>
                <div class="col-6">
                    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                        Yeni kategori oluştur
                    </a>
                </div>
            </div>
        </div>

        <br />
        <br />

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Category Adı
                        </th>
                        <th>
                            İngilizce Adı
                        </th>
                        <th>
                            Sırası
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td width="50%">@obj.Name</td>
                            <td width="30%">@obj.EngName</td>
                            <td width="30%">@obj.DisplayOrder</td>
                            <td width="20%">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                        Güncelle
                                    </a>
                                    <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                        Sil
                                    </a>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Kategori Bulunmamaktadır</p>
        }




    </div>
</div>
