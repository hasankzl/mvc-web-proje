@model Login.Models.Post

@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="deletePost">
    <input asp-for="Id" hidden />

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info lp-3">Delete Post</h2>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="CategoryId"></label>
        </div>
        <div class="col-8">
        <input  value="@Model.Category.Name" class="form-control" disabled/>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="Title"></label>
        </div>
        <div class="col-8">
            <input asp-for="Title" class="form-control"disabled />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="Body"></label>
        </div>
        <div class="col-8">
            @Html.Raw(Model.Body)
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>
    </div>

    <input type="submit" class="btn btn-info w-100 mb-2" value="delete" />
    <a asp-controller="Category" asp-action="Index" class="btn btn-primary">
        Go back
    </a>
</form>


@section Scripts{
        <partial name="_ValidationScriptsPartial" />
}