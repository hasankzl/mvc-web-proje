@model IEnumerable<Post>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Post List</h2>
        </div>
        <div class="col-6">
            <a   asp-controller="Post" asp-action="Create" class="btn btn-primary">
                Yeni Post Oluştur
            </a>
        </div>
    </div>
</div>

<br />
<br />

@if (Model.Count() > 0) { 
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Başlık
                </th>
                <th>
                    Kategori
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
                {
            <tr>
                <td width="50%">@obj.Title</td>
                <td width="30%">@obj.Category.Name</td>
                <td width="20%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Post" asp-route-Id="@obj.Id"  asp-action="Edit" class="btn btn-primary mx-2">
                            Güncelle
                        </a>
                        <a asp-controller="Post" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                            Sil
                        </a>
                    </div>

                </td>
            </tr>
                }
        </tbody>
    </table>
}
            else
            {
                <p>Post Bulunamadı</p>
            }



